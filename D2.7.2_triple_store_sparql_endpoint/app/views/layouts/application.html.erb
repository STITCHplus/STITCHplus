<html>
	<head>
		<%= javascript_include_tag "prototype" %>

		<style type="text/css">
			body {
				font-family: sans;
				font-size: 11px;
			}
			table {
				font-size: 11px;
			}
			th {
				text-align: left;
			}
			td {
				vertical-align: top;
			}
			pre {
				background-color: #ddd;
				padding-left: 10px;
				margin: 0;
			}
			img {
				border: 0;
			}
			label {
				display: inline-block;
				width: 100px;
				color: #d00;
				font-weight: bold;
			}
			.tab {
				float: left; 
				border-left: 1px solid #aad; 
				border-right: 1px solid #aad; 
				border-top: 1px solid #aad; 
				background-color: #ccf; 
				height: 15px; 
				width: 150px;
				text-align: center;
				margin-bottom: -1px;
			}
			.tab.selected {
				background-color: eef;
			}
			a {	color: #551ACC }
			.even { background-color: #eef }

			input { width: 500px }
		</style>
		<%= yield :head %>
	</head>
	<body>
		<div class="tab <%= params[:controller] == 'queries' ? 'selected' : ''%>">
			<%= link_to "Sparql", queries_path %>
		</div>
		<div class="tab <%= params[:controller] == 'concepts' ? 'selected' : ''%>">
			<%= link_to "Concepten", concepts_path %>
		</div>
		<div style="border: 1px solid #aad; float: left; padding: 10px; width: 97%">
			<%= yield %>
		</div>
	</body>
</html>
